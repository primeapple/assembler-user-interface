{
  "name": "assembler-user-interface",
  "version": "1.0.0",
  "description": "Dieses Projekt enthält den Prototyp des Philios Assemblers. Es dient als Modulleistung von Toni Müller im Modul \"Clientseitige Webanwendungen\" im WS19/20 der MLU.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "jsdoc": "npx jsdoc -d doc/jsdoc/ -r src/javascript/",
    "js-build": "webpack src/javascript/index.js --outpout bin/app.js -p",
    "js-start": "webpack src/javascript/index.js --output bin/app.js -d --watch",
    "css-build": "node-sass --omit-source-map-url src/sass/styles.scss src/css/styles.css",
    "css-start": "npm run css-build -- --watch",
    "build": "npm run css-build && npm run js-build",
    "start": "npm-run-all --parallel css-start js-start"
  },
  "repository": {
    "type": "git",
    "url": "https://ajwxf@gitlab.informatik.uni-halle.de/ajwxf/assembler-user-interface.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "codemirror": "^5.52.0",
    "mithril": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-react-jsx": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "babel-loader": "^8.0.6",
    "bulma": "^0.8.0",
    "jsdoc": "^3.6.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
